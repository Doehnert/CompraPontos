<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="checkout_submit_before">
        <observer name="UsaPontos" instance="Vexpro\CompraPontos\Observer\UsaPontos" />
    </event>

    <event name="sales_model_service_quote_submit_before">
        <observer name="sr_delivery_date" instance="Vexpro\CompraPontos\Observer\SaveDataToOrderObserver"/>
    </event>

    <event name="catalog_product_save_after">
        <observer name="test_name" instance="Vexpro\CompraPontos\Observer\Productsaveafter" />
    </event>

    <event name="sales_order_save_after">
        <observer name="showproductdata" instance="Vexpro\CompraPontos\Observer\EnviaNotaFiscal" />
    </event>

</config>